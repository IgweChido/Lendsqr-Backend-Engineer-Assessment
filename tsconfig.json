{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",

    "paths": {
      "../../*": ["./src/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*.spec.ts"],
  "exclude": ["node_modules"],
  "lib": ["es2015"]
}
